{
  "name": "ansible+opentofu",
  "build": { "dockerfile": "Dockerfile" },
  "containerUser": "root",
  "updateRemoteUserUID": true,
  "runArgs": [
    "--privileged",
    "--device", "/dev/fuse",
    "--hostname=ansible-tofu-dev"
  ],
  "remoteEnv": {
    "TF_PLUGIN_CACHE_DIR": "/root/.cache/opentofu/plugin-cache"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.ansible",
        "OpenTofu.vscode-opentofu",
        "ms-python.python"
      ],
      "settings": {
        "ansible.python.interpreterPath": "/usr/bin/python3"
      }
    }
  },
  "postCreateCommand": "mkdir -p /root/.cache/opentofu/plugin-cache && tofu version && ansible --version || true"
}
